@using TabibV1.Models;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #top-menu a:active {
            color: #0CF;
        }

        .notification-container {
            position: fixed;
            top: 60px;
            right: 15px;
            width: 500px;
            max-width: calc(100% - 30px);
        }

        .notification {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
            color: #fff;
            font-size: 16px;
            padding: 15px 20px;
            line-height: 20px;
            margin-bottom: 15px;
            animation: grow 0.5s ease-in forwards;
        }

        

    </style>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    @section Notification {  }
    @if(User.Identity.IsAuthenticated)
    {
        <script src="~/Scripts/jquery.signalR-2.4.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
    $(function () {

        $(document).click(function (event) {
            var $target = $(event.target);
            if (!$target.is($("#notificationList")) && $("#notificationList").has($target).length == 0 && !$target.is($("#notification-container")) && $("#notification-container").has($target).length == 0 && $("#notification-container").css("display") == "block") {
                $("#notification-container").css("display", "none");
            }
        });
        $("#notificationList").click(function () {
            $("#notification-container").css("display", "block");
        });
        var chat = $.connection.testSignalR;

        chat.client.sendAllNotification = function (AllNotification) {
            AllNotification.forEach(function (item) {
                $('#notification-container').append("<div class='alert alert-" + item.type + " alert-dismissible fade in' id='" + item.id + "'><a href='#' class='close' onclick='removeNotification()' data-dismiss='alert' aria-label='close'>&times;</a>" + item.message + ".</div>");
                if ($("#notificationList span").length == 0)
                { $("#notificationList").append("<span class='badge' ' style=' cursor pointer;'>1</span>"); }
                else {
                    $("#notificationList span").text(Number($("#notificationList span").text()) + 1);
                }
            });
        sessionStorage.setItem("AllNotification", "Done");
        }
        chat.client.addNotifications = function (type, text, id) {
            $('#notification-container').append("<div class='alert alert-" + type + " alert-dismissible fade in' id='" + id + "'><a href='#' class='close' onClick='removeNotification()' data-dismiss='alert' aria-label='close' >&times;</a>" + text + ".</div>");
            if ($("#notificationList span").length == 0)
            { $("#notificationList").append("<span class='badge' style='cursor: pointer;'>1</span>"); }
            else {
                $("#notificationList span").text(Number($("#notificationList span").text()) + 1);
            }
        }
        chat.client.removeNotification = function (id) {
            $("#" + id).css("display", "none"); removeNotification();
            setTimeout(function () { document.getElementById("notification-container").removeChild(document.getElementById(id)) }, 500);
        };
        $.connection.hub.start().done(function () {
        if (sessionStorage.getItem("AllNotification")!="Done"){
        chat.server.getAllNotifications('@Session["role"]', '@Session["name"]');
        }
            console.log("Done");
        }).fail(function () { console.log("fail"); });

    });
    function removeNotification() {
        if ($("#notificationList span").length > 0) {
            if (Number($("#notificationList span").text()) > 1)
                $("#notificationList span").text(Number($("#notificationList span").text()) - 1);
            else
                $("#notificationList span").text('');
        }
    }

    </script>
    
        
    }
        

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "articals", null)"><img src="@Url.Content("~/images/doctor_icon.png")" style="vertical-align: middle; width: 25px;display:inline;"> Tabib</a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="ulNavbar">
                    <li class="nav-item">@Html.ActionLink("Articals", "Index", "articals")</li>
                    <li class="nav-item">@Html.ActionLink("Our Doctor", "Index", "Doctors")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Consulations")">Consulation  </a>
                    </li>
                    <li class='nav-item' id='notificationList' style='margin-top: 15px;margin-left: -12px;'></li>
                    <li class="nav-item">@Html.ActionLink("Appointment", "Index", "Appointment")</li>
                    <li class="nav-item">@Html.ActionLink("patient", "Index", "patient")</li>
                    <li class="nav-item">@Html.ActionLink("Chat", "Chat", "Home")</li>
                    }
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
        <div class="container body-content">
            @RenderBody()
        </div>

        <div class="container body-content">
            <footer>
                <p>copy Right &copy; Omran Alaa Eldein - @DateTime.Now.Year </p>
            </footer>
        </div>

    <div class="notification-container" style="display:none;" id="notification-container"></div>
   
</body>
</html>


