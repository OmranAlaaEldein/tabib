                @Html.DropDownList("patientsId", String.Empty)
                @Html.ValidationMessageFor(model => model.patientsId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.countVisit, new { @class = "control-label col-md-2" })
