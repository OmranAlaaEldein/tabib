@model IEnumerable<tabib.Models.consulation>

@{
    ViewBag.Title = "Consultion";
}


<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<style>
    body, h1, h2, h3, h4, h5 {
        font-family: "Raleway", sans-serif;
    }
</style>

<header class="w3-container w3-center w3-padding-32">
    <h1><b>MY Consultion</b></h1>
</header>


<div class="w3-content" style="max-width:1400px">

    @foreach (var item in Model)
    {

        <div class="w3-card-4 w3-margin w3-white">
            <img src="@Url.Content(item.PathImage)" alt="Nature" style="width:100%" />
            <div class="w3-container">
                <h3><b>@Html.DisplayFor(modelItem => item.title)</b></h3>
                <h5>Title description, <span class="w3-opacity">@Html.DisplayFor(modelItem => item.DateOfconsulation)</span></h5>
            </div>

            <div class="w3-container">
                <p>
                    @Html.DisplayFor(modelItem => item.Question)
                </p>
                <hr />
               
                @if (item.reply != null)
                {<p>
                    <h3><b>Reply:</b></h3>
                    @Html.DisplayFor(modelItem => item.reply)
                </p>
                }
                else
                {
                    <p>No Reply Yet </p>
                }
                
                <div class="w3-row">
                    @if (User.Identity.Name.ToLower().Equals("admin"))
                    {<div class="w3-col m3 s12"><p><b>@Html.ActionLink("Edit", "Edit", new { id = item.consulationID })</b></p> </div>}


                    <div class="w3-col m3 w3-hide-small">
                        <p><span class="w3-right"><b>key Words : <span class="w3-tag">  @Html.DisplayFor(modelItem => item.KeyWords) </span>   </b></span></p>
                    </div>
                </div>

            </div>
        </div>
        <hr>
    }
    @if (!User.Identity.Name.ToLower().Equals("admin"))
    {
        <div class="w3-col m8 s12">
            <p><button class="w3-button w3-white w3-border"><b>@Html.ActionLink("New consultion", "Create") </b></button></p>
        </div>
    }
</div>